<Window x:Class="CheerfulGiverNXT.GiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Pledge" Height="520" Width="780"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Constituent header + banner -->
        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" CornerRadius="6">
            <StackPanel>
                <!-- Visible only when NewConstituent == true (set by code-behind) -->
                <Border x:Name="NewConstituentBanner"
                        Background="#FFF3CD"
                        BorderBrush="#FFEEBA"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,8"
                        Visibility="Collapsed">
                    <TextBlock Text="NEW RADIO CONSTITUENT" FontWeight="Bold" />
                </Border>

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding FullName}" />
                <TextBlock Text="{Binding ConstituentSummary}"
                           Margin="0,4,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Simplified entry fields: Amount + Frequency only -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <!-- Label column -->
                <ColumnDefinition Width="Auto" MinWidth="110"/>
                <!-- Field column -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Amount -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Amount:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,8"/>

            <TextBox x:Name="AmountTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <!-- Frequency -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Frequency:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding FrequencyPresets}"
                      SelectedItem="{Binding SelectedPreset}"
                      DisplayMemberPath="Display"
                      Margin="0"/>
        </Grid>


        <!-- Comments (optional) -->
        <TextBox Grid.Row="2"
                 Margin="0,12,0,0"
                 Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Height="160"
                 ToolTip="Comments (optional)"/>

        <!-- Actions -->
        <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Text="{Binding StatusText}"
                       TextWrapping="Wrap"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save"
                        Margin="8,0,0,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"/>
                <Button Content="Cancel"
                        Margin="8,0,0,0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
