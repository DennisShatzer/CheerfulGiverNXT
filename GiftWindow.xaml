<Window x:Class="CheerfulGiverNXT.GiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Pledge"
        Width="900" Height="650"
        MinWidth="860" MinHeight="620"
        WindowStartupLocation="CenterOwner"
        Loaded="GiftWindow_Loaded">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Constituent header + banner -->
        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" CornerRadius="6">
            <StackPanel>
                <Border x:Name="NewConstituentBanner"
                        Background="#FFF3CD"
                        BorderBrush="#FFECB5"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,8"
                        Visibility="Collapsed">
                    <TextBlock FontWeight="SemiBold" Text="NEW RADIO CONSTITUENT (no prior Radio fund gifts found)"/>
                </Border>

                <TextBlock FontSize="18" FontWeight="SemiBold" Text="{Binding FullName}" />
                <TextBlock Text="{Binding ConstituentSummary}" Margin="0,4,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Simplified entry fields: Amount + Frequency + (conditional) Sponsorship -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Amount -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Amount:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,8"/>

            <TextBox x:Name="AmountTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <!-- Frequency -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Frequency:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,8"/>

            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding FrequencyPresets}"
                      SelectedItem="{Binding SelectedPreset}"
                      DisplayMemberPath="Display"
                      Margin="0,0,0,8"/>

            <!-- Sponsorship selector (visible only when amount qualifies) -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Sponsorship:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0">
                <TextBlock.Style>
                    <!-- BasedOn keeps the global TextBlock style (FontSize, etc.) -->
                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowSponsorshipSelector}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <ComboBox Grid.Row="2" Grid.Column="1"
                      ItemsSource="{Binding EligibleSponsorshipOptions}"
                      SelectedItem="{Binding SelectedSponsorshipOption}"
                      DisplayMemberPath="Display">
                <ComboBox.Style>
                    <!-- BasedOn keeps the global ComboBox style (FontSize, height, padding, etc.) -->
                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowSponsorshipSelector}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>
        </Grid>

        <!-- Comments -->
        <TextBox Grid.Row="2"
                 Margin="0,12,0,0"
                 Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 ToolTip="Comments (optional)"/>

        <!-- Footer -->
        <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="Gray"
                       Text="{Binding StatusText}" TextWrapping="Wrap"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Pledge"
                        Margin="8,0,0,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"/>
                <Button Content="Cancel"
                        Margin="8,0,0,0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
