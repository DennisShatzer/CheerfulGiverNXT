<Window x:Class="CheerfulGiverNXT.GiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Pledge" Height="560" Width="780"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" CornerRadius="6">
            <StackPanel>
                <!-- Visible only when NewConstituent == true (set by code-behind) -->
                <Border x:Name="NewConstituentBanner"
                        Background="#FFF3CD"
                        BorderBrush="#FFEEBA"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,8"
                        Visibility="Collapsed">
                    <TextBlock Text="NEW RADIO CONSTITUENT" FontWeight="Bold" />
                </Border>

                <TextBlock FontSize="16" FontWeight="SemiBold" Text="{Binding FullName}" />
                <TextBlock Text="{Binding ConstituentSummary}" Margin="0,4,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Pledge amount:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox x:Name="AmountTextBox" Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,8"/>

            <TextBlock Grid.Row="0" Grid.Column="2" Text="Pledge date:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding PledgeDate}" Margin="0,0,0,6"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Frequency:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding FrequencyPresets}"
                      SelectedItem="{Binding SelectedPreset}"
                      DisplayMemberPath="Display"
                      Margin="0,0,12,6"/>

            <TextBlock Grid.Row="1" Grid.Column="2" Text="# of installments:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox Grid.Row="1" Grid.Column="3"
                     Text="{Binding NumberOfInstallmentsText, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsInstallmentsLocked}"
                     Margin="0,0,0,6"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="First installment date:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding FirstInstallmentDate}" Margin="0,0,12,6"/>

            <TextBlock Grid.Row="2" Grid.Column="2" Text="Fund ID:" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding FundIdText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Campaign ID (optional):" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CampaignIdText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,6"/>

            <TextBlock Grid.Row="3" Grid.Column="2" Text="Appeal ID (optional):" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding AppealIdText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Package ID (optional):" VerticalAlignment="Center" Margin="0,0,8,6"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding PackageIdText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,12,6"/>

            <CheckBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2"
                      Content="Send reminder"
                      IsChecked="{Binding SendReminder}"
                      VerticalAlignment="Center"
                      Margin="0,0,0,6"/>
        </Grid>

        <TextBox Grid.Row="2"
                 Margin="0,12,0,0"
                 Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Height="130"
                 ToolTip="Comments (optional)"/>

        <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Foreground="Gray"
                       Text="{Binding StatusText}" />

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Pledge"
                        Width="120"
                        Margin="8,0,0,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"/>
                <Button Content="Cancel"
                        Width="100"
                        Margin="8,0,0,0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
