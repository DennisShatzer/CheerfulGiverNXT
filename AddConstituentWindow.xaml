<Window x:Class="CheerfulGiverNXT.AddConstituentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Constituent"
        Height="520"
        Width="560"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FFF7F7F7" BorderBrush="#FFE0E0E0" BorderThickness="1" Padding="10" CornerRadius="6">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="Draft new constituent"/>
                <TextBlock Margin="0,4,0,0" TextWrapping="Wrap">
                    Enter details below. Clicking Save will create the constituent in Raiserâ€™s Edge NXT via SKY API.
                </TextBlock>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Name"/>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                <TextBox x:Name="FirstNameTextBox" Width="170" Margin="0,0,8,8" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Width="240" Margin="0,0,0,8" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Email"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Phone"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Top" Text="Address"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,8">
                <TextBox Margin="0,0,0,6" Text="{Binding AddressLine1, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Margin="0,0,0,6" Text="{Binding AddressLine2, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="220" Margin="0,0,8,0" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Width="60" Margin="0,0,8,0" Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Width="90" Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Notes"/>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,8" Height="90" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center" Text="Display"/>
            <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Text="{Binding DisplayName}" FontStyle="Italic"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="SaveButton" Width="100" Margin="0,0,8,0" IsDefault="True" Content="Save" Click="Save_Click"/>
            <Button x:Name="CancelButton" Width="100" IsCancel="True" Content="Cancel" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
