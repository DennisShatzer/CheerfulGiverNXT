<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        =====================================================================
        CheerfulGiverNXT Theme Palette (DARK)
        =====================================================================

        This file mirrors Light.xaml exactly in TERMS OF KEYS.
        Only the VALUES differ.

        If you add a new brush key for the UI, add it in BOTH Light.xaml and
        Dark.xaml with the same x:Key name.

        QUICK MAP (same as Light.xaml)
        ==============================
        Window background / chrome:
          - CG.Brush.WindowBackground

        Cards/panels + DataGrid base:
          - CG.Brush.Surface
          - CG.Brush.SurfaceAlt

        Text:
          - CG.Brush.TextPrimary
          - CG.Brush.TextMuted

        Borders:
          - CG.Brush.Border
          - CG.Brush.BorderStrong

        Inputs:
          - CG.Brush.InputBackground
          - CG.Brush.InputBorder

        Accent:
          - CG.Brush.Accent
          - CG.Brush.AccentForeground

        DataGrid details:
          - CG.Brush.GridLines
          - CG.Brush.GridAltRow

        Status progress bar:
          - CG.Brush.ProgressTrack
    -->

    <!-- ===== Core surfaces ===== -->
    <SolidColorBrush x:Key="CG.Brush.WindowBackground" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="CG.Brush.Surface"          Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="CG.Brush.SurfaceAlt"       Color="#FF252526"/>

    <!-- ===== Text ===== -->
    <SolidColorBrush x:Key="CG.Brush.TextPrimary"      Color="#FFF3F3F3"/>
    <SolidColorBrush x:Key="CG.Brush.TextMuted"        Color="#FFB0B0B0"/>

    <!-- ===== Borders ===== -->
    <SolidColorBrush x:Key="CG.Brush.Border"           Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="CG.Brush.BorderStrong"     Color="#FF515156"/>

    <!-- ===== Inputs ===== -->
    <SolidColorBrush x:Key="CG.Brush.InputBackground"  Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="CG.Brush.InputBorder"      Color="#FF5A5A5A"/>

    <!-- ===== Accent / buttons ===== -->
    <SolidColorBrush x:Key="CG.Brush.Accent"           Color="#FF0078D4"/>
    <SolidColorBrush x:Key="CG.Brush.AccentForeground" Color="#FFFFFFFF"/>

    <!-- ===== DataGrid ===== -->
    <SolidColorBrush x:Key="CG.Brush.GridLines"        Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="CG.Brush.GridAltRow"       Color="#FF262626"/>

    <!-- ===== DataGrid Column Headers ===== -->
    <!--
        DataGrid column headers do NOT automatically "darken" in WPF unless you are using
        High Contrast or a framework that themes system colors. We explicitly theme them.

        Keys used by MainWindow Results grid (and safe to reuse for other DataGrids):
          - CG.Brush.GridHeaderBackground         : header bar background
          - CG.Brush.GridHeaderForeground         : header text + sort arrow
          - CG.Brush.GridHeaderHoverBackground    : hover state background
          - CG.Brush.GridHeaderPressedBackground  : pressed state background
          - CG.Brush.GridHeaderBorder             : bottom border (separates headers from rows)
    -->
    <SolidColorBrush x:Key="CG.Brush.GridHeaderBackground"        Color="#FF2A2A2D"/>
    <SolidColorBrush x:Key="CG.Brush.GridHeaderForeground"        Color="#FFF3F3F3"/>
    <SolidColorBrush x:Key="CG.Brush.GridHeaderHoverBackground"   Color="#FF333337"/>
    <SolidColorBrush x:Key="CG.Brush.GridHeaderPressedBackground" Color="#FF3A3A3F"/>
    <SolidColorBrush x:Key="CG.Brush.GridHeaderBorder"            Color="#FF3A3A3A"/>

    <!-- ===== Progress ===== -->
    <SolidColorBrush x:Key="CG.Brush.ProgressTrack"    Color="#FF333333"/>

    <!-- ===== Semantic colors ===== -->
    <SolidColorBrush x:Key="CG.Brush.Danger"           Color="#FFD13438"/>
    <SolidColorBrush x:Key="CG.Brush.DangerForeground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="CG.Brush.Warning"          Color="#FFF59E0B"/>

    <!-- Success / Info banners (GiftWindow) -->
    <SolidColorBrush x:Key="CG.Brush.Banner.SuccessBackground" Color="#FF063A2B"/>
    <SolidColorBrush x:Key="CG.Brush.Banner.SuccessBorder"     Color="#FF10B981"/>
    <SolidColorBrush x:Key="CG.Brush.Banner.SuccessText"       Color="#FF6EE7B7"/>

    <SolidColorBrush x:Key="CG.Brush.Banner.InfoBackground"    Color="#FF0B2A4A"/>
    <SolidColorBrush x:Key="CG.Brush.Banner.InfoBorder"        Color="#FF60A5FA"/>
    <SolidColorBrush x:Key="CG.Brush.Banner.InfoText"          Color="#FF93C5FD"/>

    <!-- Match challenge callout (GiftWindow) -->
    <SolidColorBrush x:Key="CG.Brush.Callout.MatchBackground"  Color="#FF0F2A44"/>
    <SolidColorBrush x:Key="CG.Brush.Callout.MatchBorder"      Color="#FF1D4ED8"/>
    <SolidColorBrush x:Key="CG.Brush.Callout.MatchTitle"       Color="#FF93C5FD"/>
    <SolidColorBrush x:Key="CG.Brush.Callout.MatchDetail"      Color="#FFBFDBFE"/>

</ResourceDictionary>
