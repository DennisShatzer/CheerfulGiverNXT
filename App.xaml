<Application x:Class="CheerfulGiverNXT.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>

    <!-- Base font size for the whole app -->
    <Style TargetType="{x:Type Control}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- TextBox: vertically centered typing, consistent height/padding -->
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="MinHeight" Value="34"/>
        <Setter Property="Padding" Value="8,0,8,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="TextAlignment" Value="Left"/>

        <!-- Multiline textboxes should stay top-aligned (comments, notes, etc.) -->
        <Style.Triggers>
            <Trigger Property="AcceptsReturn" Value="True">
                <Setter Property="VerticalContentAlignment" Value="Top"/>
                <Setter Property="Padding" Value="8,6,8,6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox: consistent height and vertically centered content -->
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="MinHeight" Value="34"/>
        <Setter Property="Padding" Value="8,0,8,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- DatePicker: consistent height and vertically centered content -->
    <Style TargetType="{x:Type DatePicker}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="MinHeight" Value="34"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- The editable textbox inside the DatePicker -->
    <Style TargetType="{x:Type DatePickerTextBox}">
        <Setter Property="Padding" Value="8,0,8,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- Buttons: standardized height + minimum width + padding -->
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Height" Value="36"/>
        <Setter Property="MinWidth" Value="140"/>
        <Setter Property="Padding" Value="12,4"/>
    </Style>

    <!-- DataGrid readability + vertical centering in cells/headers -->
    <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="RowHeight" Value="30"/>
        <Setter Property="ColumnHeaderHeight" Value="32"/>
    </Style>

    <Style TargetType="{x:Type DataGridCell}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="6,0,6,0"/>
    </Style>

    <Style TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="6,0,6,0"/>
    </Style>

    <Style TargetType="{x:Type StatusBar}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="FontSize" Value="15"/>
    </Style>

</Application.Resources>
</Application>
