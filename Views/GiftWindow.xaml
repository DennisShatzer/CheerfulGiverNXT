<Window x:Class="CheerfulGiverNXT.GiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="950"
        Height="720"
        MinWidth="900"
        MinHeight="680"
        Title="Create Pledge"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Constituent header + banner -->
        <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" CornerRadius="6">
            <StackPanel>
                <!-- Visible only when NewConstituent == true (set by code-behind) -->
                <Border x:Name="NewConstituentBanner"
                Background="#D1FAE5"
                BorderBrush="#A7F3D0"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8"
                Visibility="Collapsed">
            <TextBlock Text="NEW RADIO CONSTITUENT (no prior Radio fund gifts found)"
               FontWeight="SemiBold"
               Foreground="#065F46"/>
</Border>

                <TextBlock FontWeight="SemiBold" Text="{Binding FullName}" />
                <TextBlock Text="{Binding ConstituentSummary}"
                           Margin="0,4,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Entry fields: Amount + Frequency (+ Sponsorship when eligible) -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <!-- Label column -->
                <ColumnDefinition Width="Auto" MinWidth="110"/>
                <!-- Field column -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Amount -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Amount:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,8"/>

            <TextBox x:Name="AmountTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <!-- Frequency -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Frequency:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,8"/>

            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding FrequencyPresets}"
                      SelectedItem="{Binding SelectedPreset}"
                      DisplayMemberPath="Display"
                      Margin="0,0,0,8"/>

            <!-- Sponsor Tier (appears when Amount qualifies via thresholds) -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Sponsor Tier:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0">
                Style="{StaticResource CG.ShowWhenSponsorshipSelector.TextBlock}"
            </TextBlock>

            <ComboBox Grid.Row="2" Grid.Column="1"
                      ItemsSource="{Binding EligibleSponsorshipOptions}"
                      SelectedItem="{Binding SelectedSponsorshipOption}"
                      DisplayMemberPath="Display"
                      Margin="0">
                Style="{StaticResource CG.ShowWhenSponsorshipSelector.ComboBox}"
            </ComboBox>

            <!-- Sponsor date (shown only when Sponsorship is shown) -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="Sponsor date:"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,6,8,0">
    Style="{StaticResource CG.ShowWhenSponsorshipSelector.TextBlock}"
</TextBlock>


            <DatePicker Grid.Row="3" Grid.Column="1"
                        VerticalAlignment="Center"
                        SelectedDate="{Binding SponsorshipDate}"
                        Margin="0,6,0,0">
                Style="{StaticResource CG.ShowWhenSponsorshipSelector.DatePicker}"
            </DatePicker>

        </Grid>

        <!-- Comments (optional) -->
        <TextBox Grid.Row="2"
                 Margin="0,12,0,0"
                 Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Height="160"
                 ToolTip="Comments (optional)"/>

        <!-- Actions -->
        <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       Text="{Binding StatusText}"
                       TextWrapping="Wrap"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Style="{StaticResource CG.Button.Primary}"
                        Margin="8,0,0,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding CanSave}"/>
                <Button Content="Cancel"
                        Margin="8,0,0,0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
