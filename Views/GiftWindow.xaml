<Window x:Class="CheerfulGiverNXT.GiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="950"
        Height="720"
        MinWidth="900"
        MinHeight="680"
        Title="Create Pledge"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource CG.Brush.WindowBackground}" Foreground="{DynamicResource CG.Brush.TextPrimary}">

    <Window.Resources>
        
        <!-- Implicit TextBlock: make all text readable by default -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

<BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="Font.Base">16</sys:Double>
        <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="Input.Height">34</sys:Double>
        <Thickness x:Key="Input.Padding">10,6,10,6</Thickness>
        <CornerRadius x:Key="Corner.Button">6</CornerRadius>

        <Style x:Key="LabelText" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.InputBorder}"/>
        </Style>

        <Style x:Key="InputComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.InputBorder}"/>
        </Style>

        <Style x:Key="InputDatePicker" TargetType="{x:Type DatePicker}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.InputBorder}"/>
        </Style>

        <ControlTemplate x:Key="ButtonTemplate.Rounded" TargetType="{x:Type Button}">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource Corner.Button}">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"
                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.92"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="Opacity" Value="0.85"/></Trigger>
                <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.55"/></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="Button.Primary" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.Accent}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.AccentForeground}"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>

        <Style x:Key="Button.Secondary" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.SurfaceAlt}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.BorderStrong}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Match banner (collapses when no active challenge), then constituent header -->
        <StackPanel Grid.Row="0">

            <!-- Remaining Match Budget banner (oldest active challenge) -->
            <Border Background="{DynamicResource CG.Brush.Callout.MatchBackground}"
                    BorderBrush="{DynamicResource CG.Brush.Callout.MatchBorder}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="10"
                    Margin="0,0,0,10"
                    Visibility="{Binding ShowMatchBanner, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="{Binding MatchBannerTitle}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CG.Brush.Callout.MatchTitle}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Remaining: " Foreground="{DynamicResource CG.Brush.Callout.MatchTitle}"/>
                            <TextBlock Text="{Binding ActiveMatchRemaining, StringFormat={}{0:C}}" FontWeight="SemiBold" Foreground="{DynamicResource CG.Brush.Callout.MatchTitle}"/>
                            <TextBlock Text=" of " Foreground="{DynamicResource CG.Brush.Callout.MatchTitle}"/>
                            <TextBlock Text="{Binding ActiveMatchBudget, StringFormat={}{0:C}}" FontWeight="SemiBold" Foreground="{DynamicResource CG.Brush.Callout.MatchTitle}"/>
                        </StackPanel>

                        <TextBlock Text="{Binding TotalMatchRemaining, StringFormat=Total remaining across all challenges: {0:C}}"
                                   FontSize="14"
                                   Foreground="{DynamicResource CG.Brush.Callout.MatchDetail}"
                                   Margin="0,3,0,0"
                                   Visibility="{Binding HasMultipleActiveMatchChallenges, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               VerticalAlignment="Top"
                               Margin="12,0,0,0"
                               Text="{Binding ActiveMatchUsed, StringFormat=Used {0:C}}"
                               FontSize="14"
                               Foreground="{DynamicResource CG.Brush.Callout.MatchDetail}"/>

                    <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                 Height="18"
                                 Margin="0,10,0,0"
                                 Minimum="0"
                                 Maximum="{Binding ActiveMatchBudget, Mode=OneWay}"
                                 Value="{Binding ActiveMatchUsed, Mode=OneWay}"
                                 Foreground="{DynamicResource CG.Brush.Accent}"
                                 Background="{DynamicResource CG.Brush.ProgressTrack}"/>
                </Grid>
            </Border>

            <!-- Constituent header + banner -->
            <Border BorderBrush="{DynamicResource CG.Brush.Border}" BorderThickness="1" Padding="10" CornerRadius="6">
                <StackPanel>
                    <!-- Visible only when NewConstituent == true (set by code=behind) -->
                    <Border x:Name="NewConstituentBanner"
                            Background="{DynamicResource CG.Brush.Banner.SuccessBackground}"
                            BorderBrush="{DynamicResource CG.Brush.Banner.SuccessBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,8"
                            Visibility="Collapsed">
                        <TextBlock Text="NEW RADIO CONSTITUENT (no prior Radio fund gifts found)"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CG.Brush.Banner.SuccessText}"/>
                    </Border>

                    
                    <!-- Visible only when IsFirstTimeGiver == true (set by code=behind) -->
                    <Border x:Name="FirstTimeGiverBanner"
                            Background="{DynamicResource CG.Brush.Banner.InfoBackground}"
                            BorderBrush="{DynamicResource CG.Brush.Banner.InfoBorder}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,0,0,8"
                            Visibility="Collapsed">
                        <TextBlock Text="FIRST TIME GIVER (no prior counted gifts found)"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CG.Brush.Banner.InfoText}"/>
                    </Border>

<TextBlock FontWeight="SemiBold" Text="{Binding FullName}" />
                    <TextBlock Text="{Binding ConstituentSummary}"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Entry fields -->
        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Amount -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Style="{StaticResource LabelText}"
                       Text="Amount:"
                       HorizontalAlignment="Right"
                       Margin="0,0,8,8"/>

            <TextBox x:Name="AmountTextBox"
                     Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource InputTextBox}"
                     Text="{Binding AmountText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,8"/>

            <!-- Frequency -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       Style="{StaticResource LabelText}"
                       Text="Frequency:"
                       HorizontalAlignment="Right"
                       Margin="0,0,8,8"/>

            <ComboBox Grid.Row="1" Grid.Column="1"
                      Style="{StaticResource InputComboBox}"
                      ItemsSource="{Binding FrequencyPresets}"
                      SelectedItem="{Binding SelectedPreset}"
                      DisplayMemberPath="Display"
                      Margin="0,0,0,8"/>

            <!-- Sponsor Tier -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Style="{StaticResource LabelText}"
                       Text="Sponsor Tier:"
                       HorizontalAlignment="Right"
                       Margin="0,0,8,0"
                       Visibility="{Binding ShowSponsorshipSelector, Converter={StaticResource BoolToVis}}"/>

            <ComboBox Grid.Row="2" Grid.Column="1"
                      Style="{StaticResource InputComboBox}"
                      ItemsSource="{Binding EligibleSponsorshipOptions}"
                      SelectedItem="{Binding SelectedSponsorshipOption}"
                      DisplayMemberPath="Display"
                      Margin="0"
                      IsEnabled="{Binding HasAvailableSponsorshipSlots}"
                      Visibility="{Binding ShowSponsorshipSelector, Converter={StaticResource BoolToVis}}"/>

            <!-- Sponsor date -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                       Style="{StaticResource LabelText}"
                       Text="Sponsor date:"
                       HorizontalAlignment="Right"
                       Margin="0,8,8,0"
                       Visibility="{Binding ShowSponsorshipSelector, Converter={StaticResource BoolToVis}}"/>

            <DatePicker x:Name="SponsorshipDatePicker"
                        Grid.Row="3" Grid.Column="1"
                        Style="{StaticResource InputDatePicker}"
                        Width="200"
                        HorizontalAlignment="Left"
                        Margin="0,8,0,0"
                        SelectedDate="{Binding SponsorshipDate}"
                        Visibility="{Binding ShowSponsorshipSelector, Converter={StaticResource BoolToVis}}">
                <!-- Make the DatePicker text vertically centered and keep the calendar icon close to the date text. -->
                <DatePicker.Resources>
                    <Style TargetType="{x:Type DatePickerTextBox}">
                        <Setter Property="Padding" Value="10,6,30,6"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

            <TextBlock Grid.Row="4" Grid.Column="1"
                       Text="{Binding SponsorshipAvailabilityStatus}"
                       Foreground="{DynamicResource CG.Brush.TextMuted}"
                       FontSize="14"
                       Margin="2,4,0,0"
                       Visibility="{Binding ShowSponsorshipSelector, Converter={StaticResource BoolToVis}}"/>
        </Grid>
        <!-- Prior gifts (this campaign) + comments -->
        <StackPanel Grid.Row="2" Margin="0,12,0,0">

            <Expander x:Name="GiftHistoryExpander" IsExpanded="True"
                      Margin="0,0,0,12"
                      Header="{Binding ExistingCampaignGiftsHeader}">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding ExistingCampaignGifts}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              FontSize="{StaticResource Font.Base}"
                              Height="190" Background="{DynamicResource CG.Brush.Surface}" Foreground="{DynamicResource CG.Brush.TextPrimary}" BorderBrush="{DynamicResource CG.Brush.Border}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Pledge date" Binding="{Binding PledgeDate, StringFormat=d}" Width="115"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="95"/>
                            <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="110"/>
                            <DataGridTextColumn Header="# Inst." Binding="{Binding Installments}" Width="70"/>
                            <DataGridTextColumn Header="Gift ID" Binding="{Binding ApiGiftId}" Width="140"/>
                            <DataGridTextColumn Header="Sponsor date" Binding="{Binding SponsoredDate, StringFormat=d}" Width="120"/>
                            <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="{Binding ExistingCampaignGiftsStatus}"
                               Foreground="{DynamicResource CG.Brush.TextMuted}"
                               FontSize="14"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Expander>

            <!-- Comments -->
            <TextBox Style="{StaticResource InputTextBox}"
                     Height="160"
                     Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     ToolTip="Comments (optional)"/>
        </StackPanel>

<!-- Actions -->
        <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource CG.Brush.TextMuted}"
                       Text="{Binding StatusText}"
                       TextWrapping="Wrap"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save"
                        Margin="8,0,0,0"
                        Command="{Binding SaveCommand}">
                    <!-- Save is normally enabled by CanSave (amount validation),
                         but if sponsorship selection is visible, a date must be chosen. -->
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Primary}">
                            <Setter Property="IsEnabled">
                                <Setter.Value>
                                    <Binding Path="CanSave"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ShowSponsorshipSelector}" Value="True"/>
                                        <Condition Binding="{Binding SponsorshipDate}" Value="{x:Null}"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Cancel"
                        Style="{StaticResource Button.Secondary}"
                        Margin="8,0,0,0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
