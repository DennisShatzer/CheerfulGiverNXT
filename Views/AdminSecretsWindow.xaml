<Window x:Class="CheerfulGiverNXT.AdminSecretsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Admin: API and Authorization Settings"
        Width="860"
        Height="600"
        MinWidth="740"
        MinHeight="520"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Background="{DynamicResource CG.Brush.WindowBackground}" Foreground="{DynamicResource CG.Brush.TextPrimary}">

    <Window.Resources>

        <!-- Base sizing -->
        <sys:Double x:Key="Font.Base">16</sys:Double>
        <sys:Double x:Key="Input.Height">34</sys:Double>
        <Thickness x:Key="Input.Padding">10,6,10,6</Thickness>
        <CornerRadius x:Key="Corner.Button">6</CornerRadius>

        <!-- Typography -->
        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Implicit TextBlock: readable by default -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource BodyText}"/>

        <Style x:Key="MutedText" TargetType="TextBlock" BasedOn="{StaticResource BodyText}">
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextMuted}"/>
        </Style>

        <!-- Input styles -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="340"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.InputBorder}"/>
        </Style>

        <Style x:Key="InputPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="MinWidth" Value="340"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.InputBorder}"/>
        </Style>

        <!-- Buttons -->
        <ControlTemplate x:Key="ButtonTemplate.Rounded" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource Corner.Button}">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"
                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.92"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="Opacity" Value="0.85"/></Trigger>
                <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.55"/></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="Button.Primary" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.Accent}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.AccentForeground}"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>

        <Style x:Key="Button.Secondary" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.SurfaceAlt}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.BorderStrong}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource CG.Brush.TextPrimary}"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>

        <!-- Cards / sections -->
        <Style x:Key="HeaderCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CG.Brush.Surface}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SectionGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Background" Value="{DynamicResource CG.Brush.Surface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CG.Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock" BasedOn="{StaticResource MutedText}">
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

    </Window.Resources>

    <!-- Center the content and give it breathing room -->
    <Grid Margin="18" HorizontalAlignment="Center" MaxWidth="980">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="API and Authorization Settings" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Style="{StaticResource MutedText}" Margin="0,8,0,0">
                        Secrets are stored in SQL Server Express encrypted with Windows DPAPI (<Run FontWeight="SemiBold">LocalMachine</Run>).
                        Any Windows user on this PC can run the app without re-entering keys.
                    </TextBlock>
                </StackPanel>

                <!-- Machine / DB summary -->
                <Grid Grid.Row="1" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource FormLabel}" Text="Machine"/>
                        <TextBlock Text="{Binding MachineName}" FontWeight="SemiBold"/>

                        <TextBlock Style="{StaticResource FormLabel}" Margin="0,10,0,2" Text="Key"/>
                        <TextBlock Text="{Binding MachineKey, Mode=OneWay}" FontFamily="Consolas"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="24,0,0,0" HorizontalAlignment="Stretch">
                        <TextBlock Style="{StaticResource FormLabel}" Text="Database"/>
                        <TextBlock Text="{Binding DatabaseSummary}" FontFamily="Consolas" TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Subscription Key -->
                <GroupBox Header="Blackbaud SKY API Subscription Key" Style="{StaticResource SectionGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}">
                            Stored under <Run FontFamily="Consolas">__GLOBAL__</Run>. This key is added to every SKY API request.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Status block (vertical to avoid crowding) -->
                            <StackPanel Grid.Column="0" Margin="0,0,14,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource FormLabel}" Text="Status"/>
                                <TextBlock Text="{Binding GlobalSubscriptionStatusText}" FontWeight="SemiBold"/>

                                <TextBlock Style="{StaticResource FormLabel}" Margin="0,10,0,2" Text="Updated"/>
                                <TextBlock Text="{Binding GlobalSubscriptionUpdatedAtText}"/>
                            </StackPanel>

                            <!-- Entry field (PasswordBox + TextBox for show/hide) -->
                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <PasswordBox x:Name="SubscriptionKeyPasswordBox" Style="{StaticResource InputPasswordBox}"/>
                                <TextBox x:Name="SubscriptionKeyTextBox" Style="{StaticResource InputTextBox}" Visibility="Collapsed"/>
                            </Grid>

                            <CheckBox x:Name="ShowSubscriptionKeyCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                            <Button x:Name="SaveSubscriptionKeyButton" Content="Save Subscription Key" Style="{StaticResource Button.Primary}" Margin="0,0,8,0" IsEnabled="False"/>
                            <Button x:Name="ClearSubscriptionKeyButton" Content="Clear" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Client Secret -->
                <GroupBox Header="OAuth Client Secret" Style="{StaticResource SectionGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}">
                            Stored under <Run FontFamily="Consolas">__OAUTH_CLIENT_SECRET__</Run>. Needed for automatic refresh tokens (confidential flow).
                            <LineBreak/>
                            <Run Foreground="{DynamicResource CG.Brush.Warning}">Note:</Run> if you change this value, restart the app for it to take effect.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,14,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource FormLabel}" Text="Status"/>
                                <TextBlock Text="{Binding ClientSecretStatusText}" FontWeight="SemiBold"/>

                                <TextBlock Style="{StaticResource FormLabel}" Margin="0,10,0,2" Text="Updated"/>
                                <TextBlock Text="{Binding ClientSecretUpdatedAtText}"/>
                            </StackPanel>

                            <Grid Grid.Column="1" VerticalAlignment="Center">
                                <PasswordBox x:Name="ClientSecretPasswordBox" Style="{StaticResource InputPasswordBox}"/>
                                <TextBox x:Name="ClientSecretTextBox" Style="{StaticResource InputTextBox}" Visibility="Collapsed"/>
                            </Grid>

                            <CheckBox x:Name="ShowClientSecretCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                            <Button x:Name="SaveClientSecretButton" Content="Save Client Secret" Style="{StaticResource Button.Primary}" Margin="0,0,8,0" IsEnabled="False"/>
                            <Button x:Name="ClearClientSecretButton" Content="Clear" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Machine token status -->
                <GroupBox Header="This PC" Style="{StaticResource SectionGroupBox}" Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}">
                            Stored under <Run FontFamily="Consolas" Text="{Binding MachineKey, Mode=OneWay}"/>.
                            If you clear this, you must click “Authorize PC”.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="240"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,14,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource FormLabel}" Text="Status"/>
                                <TextBlock Text="{Binding MachineTokenStatusText}" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,14,0" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource FormLabel}" Text="Expires"/>
                                <TextBlock Text="{Binding MachineTokenExpiresAtText}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource FormLabel}" Text="Updated"/>
                                <TextBlock Text="{Binding MachineTokenUpdatedAtText}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                            <Button x:Name="AuthorizeNowButton" Content="Authorize PC" Style="{StaticResource Button.Secondary}" Margin="0,0,8,0"/>
                            <Button x:Name="ClearMachineTokensButton" Content="Clear This PC Tokens" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,16,0,0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Refresh" Style="{StaticResource Button.Secondary}" Margin="0,0,8,0" Click="Refresh_Click"/>
                <Button Content="Close" Style="{StaticResource Button.Secondary}" IsCancel="True"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
