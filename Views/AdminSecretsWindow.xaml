<Window x:Class="CheerfulGiverNXT.AdminSecretsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin: API and Authorization Settings"
        Width="860"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FFF7F7F7">

    <Window.Resources>
        
        <!-- Implicit TextBlock: make all text readable by default -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

<sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="Font.Base">16</sys:Double>
        <sys:Double xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Key="Input.Height">34</sys:Double>
        <Thickness x:Key="Input.Padding">10,6,10,6</Thickness>
        <CornerRadius x:Key="Corner.Button">6</CornerRadius>

        <Style x:Key="BodyText" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
        </Style>

        <Style x:Key="MutedText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BodyText}">
            <Setter Property="Foreground" Value="#FF555555"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="Padding" Value="{StaticResource Input.Padding}"/>
        </Style>

        <ControlTemplate x:Key="ButtonTemplate.Rounded" TargetType="{x:Type Button}">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource Corner.Button}">
                <ContentPresenter Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RecognizesAccessKey="True"
                                  TextElement.Foreground="{TemplateBinding Foreground}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter Property="Opacity" Value="0.92"/></Trigger>
                <Trigger Property="IsPressed" Value="True"><Setter Property="Opacity" Value="0.85"/></Trigger>
                <Trigger Property="IsEnabled" Value="False"><Setter Property="Opacity" Value="0.55"/></Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="Button.Primary" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>

        <Style x:Key="Button.Secondary" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="{StaticResource Font.Base}"/>
            <Setter Property="Height" Value="{StaticResource Input.Height}"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="14,4"/>
            <Setter Property="Background" Value="#FFF3F3F3"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF111111"/>
            <Setter Property="Template" Value="{StaticResource ButtonTemplate.Rounded}"/>
        </Style>

        <Style x:Key="HeaderCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="BorderBrush" Value="#FFE2E2E2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource HeaderCard}">
            <StackPanel>
                <TextBlock Text="API and Authorization Settings" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Style="{StaticResource MutedText}" Margin="0,6,0,0" TextWrapping="Wrap">
                    Secrets are stored in SQL Server Express encrypted with Windows DPAPI (<Run FontWeight="SemiBold">LocalMachine</Run>). Any Windows user on this PC can run the app without re-entering keys.
                </TextBlock>

                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource MutedText}" Text="Machine: "/>
                        <TextBlock Text="{Binding MachineName}" FontWeight="SemiBold"/>
                        <TextBlock Text="   " />
                        <TextBlock Style="{StaticResource MutedText}" Text="Key: "/>
                        <TextBlock Text="{Binding MachineKey, Mode=OneWay}" FontFamily="Consolas" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Style="{StaticResource MutedText}" Text="Database: "/>
                        <TextBlock Text="{Binding DatabaseSummary}" FontFamily="Consolas" />
                    </StackPanel>
                </Grid>

                <TextBlock Margin="0,10,0,0" Foreground="#FF666666" FontSize="12"
                           Text="Tip: From the main window press Ctrl+Shift+S to open this screen."/>
            </StackPanel>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" Margin="0,14,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Subscription Key -->
                <GroupBox Header="Blackbaud SKY API Subscription Key" Margin="0,0,0,12" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}" TextWrapping="Wrap">
                            Stored under <Run FontFamily="Consolas">__GLOBAL__</Run>. This key is added to every SKY API request.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,14,0">
                                <TextBlock Style="{StaticResource MutedText}" Text="Status: "/>
                                <TextBlock Text="{Binding GlobalSubscriptionStatusText}" FontWeight="SemiBold"/>
                                <TextBlock Style="{StaticResource MutedText}" Text="  Updated: " Margin="14,0,0,0"/>
                                <TextBlock Text="{Binding GlobalSubscriptionUpdatedAtText}"/>
                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="SubscriptionKeyPasswordBox" Style="{StaticResource InputPasswordBox}"/>
                                <TextBox x:Name="SubscriptionKeyTextBox" Style="{StaticResource InputTextBox}" Visibility="Collapsed"/>
                            </Grid>

                            <CheckBox x:Name="ShowSubscriptionKeyCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="SaveSubscriptionKeyButton" Content="Save Subscription Key" Style="{StaticResource Button.Primary}" Margin="0,0,8,0"/>
                            <Button x:Name="ClearSubscriptionKeyButton" Content="Clear" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Client Secret -->
                <GroupBox Header="OAuth Client Secret" Margin="0,0,0,12" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}" TextWrapping="Wrap">
                            Stored under <Run FontFamily="Consolas">__OAUTH_CLIENT_SECRET__</Run>. Needed for automatic refresh tokens (confidential flow).
                            <LineBreak/>
                            <Run Foreground="#FF7A4E00">Note:</Run> if you change this value, restart the app for it to take effect.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,14,0">
                                <TextBlock Style="{StaticResource MutedText}" Text="Status: "/>
                                <TextBlock Text="{Binding ClientSecretStatusText}" FontWeight="SemiBold"/>
                                <TextBlock Style="{StaticResource MutedText}" Text="  Updated: " Margin="14,0,0,0"/>
                                <TextBlock Text="{Binding ClientSecretUpdatedAtText}"/>
                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="ClientSecretPasswordBox" Style="{StaticResource InputPasswordBox}"/>
                                <TextBox x:Name="ClientSecretTextBox" Style="{StaticResource InputTextBox}" Visibility="Collapsed"/>
                            </Grid>

                            <CheckBox x:Name="ShowClientSecretCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="SaveClientSecretButton" Content="Save Client Secret" Style="{StaticResource Button.Primary}" Margin="0,0,8,0"/>
                            <Button x:Name="ClearClientSecretButton" Content="Clear" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Machine token status -->
                <GroupBox Header="This PC" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource MutedText}" TextWrapping="Wrap">
                            Stored under <Run FontFamily="Consolas" Text="{Binding MachineKey, Mode=OneWay}"/>. If you clear this, the operator must click “Authorize this PC” again.
                        </TextBlock>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Style="{StaticResource MutedText}" Text="Status: "/>
                            <TextBlock Text="{Binding MachineTokenStatusText}" FontWeight="SemiBold"/>
                            <TextBlock Style="{StaticResource MutedText}" Text="  Expires: " Margin="14,0,0,0"/>
                            <TextBlock Text="{Binding MachineTokenExpiresAtText}"/>
                            <TextBlock Style="{StaticResource MutedText}" Text="  Updated: " Margin="14,0,0,0"/>
                            <TextBlock Text="{Binding MachineTokenUpdatedAtText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="AuthorizeNowButton" Content="Authorize This PC Now…" Style="{StaticResource Button.Secondary}" Margin="0,0,8,0"/>
                            <Button x:Name="ClearMachineTokensButton" Content="Clear This PC Tokens" Style="{StaticResource Button.Secondary}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,14,0,0">
            <TextBlock DockPanel.Dock="Left" Foreground="#FF666666" VerticalAlignment="Center" Text="Changes are saved immediately to SQL." />
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Refresh" Style="{StaticResource Button.Secondary}" Margin="0,0,8,0" Click="Refresh_Click"/>
                <Button Content="Close" Style="{StaticResource Button.Secondary}" IsCancel="True"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
