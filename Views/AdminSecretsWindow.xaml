<Window x:Class="CheerfulGiverNXT.AdminSecretsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin: API and Authorization Settings"
        Width="860" Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FFF7F7F7">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="190" />
            <Setter Property="Height" Value="30" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="14" BorderBrush="#FFE2E2E2" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="API and Authorization Settings" FontSize="20" FontWeight="SemiBold"/>
                <TextBlock Margin="0,6,0,0" TextWrapping="Wrap" Foreground="#FF555555">
                    Secrets are stored in SQL Server Express encrypted with Windows DPAPI (<Run FontWeight="SemiBold">LocalMachine</Run>). Any Windows user on this PC can run the app without re-entering keys.
                </TextBlock>
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Machine: " Foreground="#FF666666"/>
                        <TextBlock Text="{Binding MachineName}" FontWeight="SemiBold"/>
                        <TextBlock Text="   " />
                        <TextBlock Text="Key: " Foreground="#FF666666"/>
                        <TextBlock Text="{Binding MachineKey, Mode=OneWay}" FontFamily="Consolas" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Database: " Foreground="#FF666666"/>
                        <TextBlock Text="{Binding DatabaseSummary}" FontFamily="Consolas" />
                    </StackPanel>
                </Grid>

                <TextBlock Margin="0,10,0,0" Foreground="#FF666666" FontSize="12"
                           Text="Tip: From the main window press Ctrl+Shift+S to open this screen."/>
            </StackPanel>
        </Border>

        <!-- Body -->
        <ScrollViewer Grid.Row="1" Margin="0,14,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Subscription Key -->
                <GroupBox Header="Blackbaud SKY API Subscription Key" Margin="0,0,0,12" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" TextWrapping="Wrap" Foreground="#FF555555">
                            Stored under <Run FontFamily="Consolas">__GLOBAL__</Run>. This key is added to every SKY API request.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,14,0">
                                <TextBlock Text="Status: " Foreground="#FF666666"/>
                                <TextBlock Text="{Binding GlobalSubscriptionStatusText}" FontWeight="SemiBold"/>
                                <TextBlock Text="  Updated: " Margin="14,0,0,0" Foreground="#FF666666"/>
                                <TextBlock Text="{Binding GlobalSubscriptionUpdatedAtText}"/>
                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="SubscriptionKeyPasswordBox" Height="28" />
                                <TextBox x:Name="SubscriptionKeyTextBox" Height="28" Visibility="Collapsed" />
                            </Grid>

                            <CheckBox x:Name="ShowSubscriptionKeyCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="SaveSubscriptionKeyButton" Content="Save Subscription Key" Margin="0,0,8,0"/>
                            <Button x:Name="ClearSubscriptionKeyButton" Content="Clear"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Client Secret -->
                <GroupBox Header="OAuth Client Secret" Margin="0,0,0,12" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" TextWrapping="Wrap" Foreground="#FF555555">
                            Stored under <Run FontFamily="Consolas">__OAUTH_CLIENT_SECRET__</Run>. Needed for automatic refresh tokens (confidential flow).
                            <LineBreak/>
                            <Run Foreground="#FF7A4E00">Note:</Run> if you change this value, restart the app for it to take effect.
                        </TextBlock>

                        <Grid Grid.Row="1" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,14,0">
                                <TextBlock Text="Status: " Foreground="#FF666666"/>
                                <TextBlock Text="{Binding ClientSecretStatusText}" FontWeight="SemiBold"/>
                                <TextBlock Text="  Updated: " Margin="14,0,0,0" Foreground="#FF666666"/>
                                <TextBlock Text="{Binding ClientSecretUpdatedAtText}"/>
                            </StackPanel>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <PasswordBox x:Name="ClientSecretPasswordBox" Height="28" />
                                <TextBox x:Name="ClientSecretTextBox" Height="28" Visibility="Collapsed" />
                            </Grid>

                            <CheckBox x:Name="ShowClientSecretCheckBox" Grid.Column="2" Content="Show" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="SaveClientSecretButton" Content="Save Client Secret" Margin="0,0,8,0"/>
                            <Button x:Name="ClearClientSecretButton" Content="Clear"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Machine token status -->
                <GroupBox Header="This PC" Padding="12" Background="White" BorderBrush="#FFE2E2E2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" TextWrapping="Wrap" Foreground="#FF555555">
                            Stored under <Run FontFamily="Consolas" Text="{Binding MachineKey, Mode=OneWay}"/>. If you clear this, the operator must click “Authorize this PC” again.
                        </TextBlock>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Status: " Foreground="#FF666666"/>
                            <TextBlock Text="{Binding MachineTokenStatusText}" FontWeight="SemiBold"/>
                            <TextBlock Text="  Expires: " Margin="14,0,0,0" Foreground="#FF666666"/>
                            <TextBlock Text="{Binding MachineTokenExpiresAtText}"/>
                            <TextBlock Text="  Updated: " Margin="14,0,0,0" Foreground="#FF666666"/>
                            <TextBlock Text="{Binding MachineTokenUpdatedAtText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="AuthorizeNowButton" Content="Authorize This PC Now…" Margin="0,0,8,0"/>
                            <Button x:Name="ClearMachineTokensButton" Content="Clear This PC Tokens"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,14,0,0">
            <TextBlock DockPanel.Dock="Left" Foreground="#FF666666" VerticalAlignment="Center" Text="Changes are saved immediately to SQL." />
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Refresh" Margin="0,0,8,0" Click="Refresh_Click"/>
                <Button Content="Close" IsCancel="True"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
